<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioAppTheme" parent="Theme.AppCompat" >

        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <!--<item name="android:colorPrimaryDark">@color/primary_dark</item>-->
        <!--   theme UI controls like checkboxes and text fields -->
        <!--<item name="android:colorAccent">@color/accent</item>-->
        <item name="android:colorActivatedHighlight">@color/background_color</item>
        <item name="android:color">@color/accent</item>
        <item name="android:colorBackground">@color/background_color</item>
        <!--<item name="android:windowBackground">@color/background_color</item>-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/accent_material_dark</item>
        <item name="android:textColorTertiary">@color/accent_material_dark</item>
        <!--<item name="android:titleTextStyle">@color/secondary_text</item> -->
        <item name="android:divider">@color/divider</item>
        <item name="android:childDivider">@color/divider</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="android:buttonStyle">@style/default_button</item>
        <item name="colorAccent">@color/background_color</item>
        <item name="android:statusBarColor">@color/accent</item>
        <!--<item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/background_color</item>-->
        <!--<item name="android:popupBackground">@color/background_color</item>-->
        <!--<item name="android:colorForeground">@color/background_floating_material_dark</item>-->
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_background_color</item>

        <item name="android:dialogTheme">@style/Dialog_Theme_23</item>
        <item name="android:alertDialogTheme">@style/Alert_Dialog_Theme_23</item>
        <item name="android:timePickerDialogTheme">@style/timePickerDialogTheme</item>

        <item name="android:spinnerItemStyle">@style/Spinner.Theme.spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/Spinner.Theme.spinnerDropDownItemStyle</item>
    </style>

    <style name="timePickerDialogTheme" parent="@android:style/Widget.DatePicker">
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorPrimary">#00397F</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:headerBackground">@color/accent</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:popupBackground">@color/material_blue_grey_900</item>
        <item name="android:windowBackground">@color/material_blue_grey_900</item>
    </style>

    <style name="Dialog_Theme_23" parent="android:Theme.Material.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/material_blue_grey_900</item>
    </style>

    <style name="Alert_Dialog_Theme_23" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/material_blue_grey_900</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">#FFC107</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Spinner.Theme.spinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/background_color</item>
    </style>

    <style name="Spinner.Theme.spinnerDropDownItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/accent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>