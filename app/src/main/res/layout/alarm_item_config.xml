<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/alarm_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:lines="1"
            android:maxLines="1"
            android:text="Alarm" />

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/is_enabled"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:checked="false"
            android:focusable="false"
            android:text="Active"
            android:textColor="@color/primary_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/alarm_type"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:entries="@array/alarm_types_array"
            android:gravity="center"
            android:textColor="@color/background_color"
            android:background="@drawable/button_selected"
            android:layout_margin="5dp"
            android:padding="5dp"
            
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/data"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Select Audio"
            android:textColor="@color/background_color"
            android:background="@drawable/button_selected"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/repeating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:focusable="false"
            android:textColor="@color/background_color"
            android:background="@drawable/button_selected"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Repeating" />

        <CheckBox
            android:id="@+id/vibrating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:focusable="false"
            android:textColor="@color/background_color"
            android:background="@drawable/button_selected"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Vibrate" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:id="@+id/day1"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/sunday"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"
            android:elegantTextHeight="false" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2dp"
            android:text="@string/monday"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day3"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2dp"
            android:singleLine="false"
            android:text="@string/tuesday"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day4"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2dp"
            android:text="@string/wednesday"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day5"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2dp"
            android:text="@string/thursday"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day6"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2dp"
            android:text="@string/friday"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day7"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2dp"
            android:text="@string/saturday"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/duration"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="Duration:10"
            android:background="@drawable/button_selected"
            android:textColor="@color/background_color"
            android:shadowColor="@color/background_color"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/easing"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/button_selected"
            android:textColor="@color/background_color"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="Easing:0"
            android:shadowColor="@color/background_color"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/alarm_delete"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:drawableTop="@drawable/ic_delete_black_48dp"
            android:layout_gravity="center|bottom"
            android:onClick="createNewAlarm"
            android:background="@drawable/button_selected"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>