    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:defaultValue="content://settings/system/alarm_alert"
        android:key="alarm_tone"
        android:ringtoneType="alarm"
        android:title="Default Alarm tone" />


    <EditTextPreference

    android:defaultValue="100"
    android:dialogTitle="Default Duration"
    android:inputType="number"
    android:key="default_duration"
    android:summary=""
    android:title="Default Duration" />


    <EditTextPreference
        android:defaultValue="100"
        android:dialogTitle="Default Max Volume"
        android:inputType="number"
        android:key="default_max_volume"
        android:summary=""
        android:title="Default Max Volume" />



    <EditTextPreference
        android:defaultValue="100"
        android:dialogTitle="Default Crescendo"
        android:inputType="number"
        android:key="default_crescendo"
        android:summary="Default Crescendo"
        android:title="Default Crescendo" />



