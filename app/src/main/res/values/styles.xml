<resources>

    <!-- Base application theme. All API's below 21-->
    <style name="RadioAppTheme" parent="Theme.AppCompat">
        <item name="android:colorActivatedHighlight">@color/background_color</item>
        <item name="android:color">@color/accent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/secondary_text</item>
        <item name="android:titleTextStyle">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:childDivider">@color/divider</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="colorAccent">@color/background_color</item>

        <!--<item name="android:spinnerDropDownItemStyle">@style/Spinner.Theme</item>-->
        <item name="android:alertDialogStyle">@style/default_alarmDialog</item>
        <item name="android:textColorSecondaryInverse">@color/background_floating_material_dark
        </item>
    </style>

    <!-- define styles for all alert dialogs -->
    <style name="default_alarmDialog">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:headerBackground">@color/accent</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:popupBackground">@color/background_color</item>
    </style>

    <!-- define styles for all buttons -->
    <style name="default_button" parent="android:Widget.Button" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >@color/tertiary_text</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >18sp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:paddingBottom" >5dp</item>
        <item name="android:paddingTop" >5dp</item>
        <item name="android:paddingLeft" >15dp</item>
        <item name="android:paddingRight" >15dp</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="Dialog.Theme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Spinner.Theme" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <!--<item name="android:textColor">@color/background_color</item>-->
    </style>

</resources>
