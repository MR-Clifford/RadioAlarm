<resources>

    <!-- Base application theme. -->
    <style name="RadioAppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorActivatedHighlight">@color/accent</item>
        <item name="android:color">@color/accent</item>
        <!--<item name="android:background">@color/background_color</item>-->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/secondary_text</item>
        <item name="android:titleTextStyle">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:childDivider">@color/divider</item>
        <item name="android:listDivider">@color/divider</item>
        <!--<item name="android:buttonStyle">@style/default_button</item>-->
        <item name="android:alertDialogStyle">@style/default_alarmDialog</item>
        <!--<item name="android:timePickerDialogTheme">@style/default_alarmDialog</item>-->
        <item name="colorAccent">@color/accent</item>

    </style>

    <!-- define styles for all alert dialogs -->
    <style name="default_alarmDialog">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:headerBackground">@color/accent</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:popupBackground">@color/background_color</item>
        <!--<item name="android:windowTitleStyle">...</item>
        <item name="android:textAppearanceMedium">...</item>
        <item name="android:borderlessButtonStyle">1</item>
        <item name="android:buttonBarStyle">1</item> -->
    </style>

    <!-- define styles for all buttons -->
    <style name="default_button" parent="android:Widget.Button" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >@color/tertiary_text</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >18sp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:paddingBottom" >5dp</item>
        <item name="android:paddingTop" >5dp</item>
        <item name="android:paddingLeft" >15dp</item>
        <item name="android:paddingRight" >15dp</item>
        <item name="android:background">@color/accent</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- <item name="android:background">@drawable/actionbar_background</item> -->
    </style>

    <style name="Dialog.Theme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
